<project xmlns:ivy="antlib:org.apache.ivy.ant" name="build-ivy" default="ivy_report"  basedir=".">
    
  
  <!-- 
  <taskdef name="ivy-configure" classname="org.apache.ivy.ant.IvyConfigure" classpath="lib/ivy-2.4.0.jar"/>
  <taskdef name="ivy-resolve" classname="org.apache.ivy.ant.IvyResolve" classpath="lib/ivy-2.4.0.jar"/>
  <taskdef name="ivy-retrieve" classname="org.apache.ivy.ant.IvyRetrieve" classpath="lib/ivy-2.4.0.jar"/>
  <taskdef name="ivy-publish" classname="org.apache.ivy.ant.IvyPublish" classpath="lib/ivy-2.4.0.jar"/> 
   -->  
   <path id="ivy.lib.path">
    <fileset dir="lib" includes="*.jar"/>
</path>
  <taskdef resource="org/apache/ivy/ant/antlib.xml"
         uri="antlib:org.apache.ivy.ant" classpathref="ivy.lib.path"/>
    
    
    <!-- ================================= 
          target: resolve              
         ================================= -->
    <target name="resolve" description="--> retrieve dependencies with ivy">

    <property name="ivy.default.ivy.user.dir" value="${basedir}/ant"/>
    <property name="ivy.dep.file" value="${basedir}/ant/ivy.xml" />
       <ivy:retrieve conf="sources" pattern="lib/[artifact](-[classifier]).[ext]"/>
    </target>
    
   <target   name="ivy-report" depends="resolve">
   <mkdir dir="ivy_reports"/>
   <ivy:report todir="ivy_reports" ></ivy:report> 
   
   </target> 
</project>